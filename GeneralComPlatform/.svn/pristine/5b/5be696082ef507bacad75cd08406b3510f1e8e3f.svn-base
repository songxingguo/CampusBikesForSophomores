@import (reference) "/css/base";

#ie-lower {
  .reset-box-sizing;
  background-color: rgb(37,39,34);
  width: 100%;
  height: 100%;
  position: fixed;
  z-index:9999999999999;
  top: 0;
  left: 0;

  .popup{
    margin:100px auto;
    border:3px solid rgb(128,128,128);
    width: 650px;
    padding: 15px 20px 0px 20px;
    background-color: white;
  }

  .bowsers{
    padding:0 0 20px 86px;
    border-bottom: 1px solid #F7F7F7;
  }

  .chrome,.ff,.sf{
    background-image: url(browser.png);
    display: block;
    float: left;
    margin:0px 30px;
  }

  .chrome{
    background-position: 0px 0px;
    width: 110px;
    height: 90px;
  }

  .ff{
    background-position: -190px 0px;
    width: 70px;
    height: 88px;
  }

  .sf{
    margin:0px 50px;
    background-position: 80px 0px;
    width: 80px;
    height: 85px;
  }

  .why{
    span{
      font-weight: 100;
      color: #AD0E0E;
      padding-left: 20px;
    }
    img{
      height: 125px;
      width: 600px;
      margin-top: 10px;
    }
  }

  .reason{
    width: 130px;
    font-size: 12px;
    word-break: break-all;
    word-wrap: break-word;
    float: left;
    margin:10px 43px 0 0;
    p{
      color:gray;
      line-height: 20px;
    }
    &.last{
      margin-right:0;
    }
  }

  .wheeler-dealer{
    border-top: 1px dashed lightgrey;
    margin-top: 10px;
    line-height: 40px;
    text-align: center;
    cursor: pointer;
    &:hover{
      background-color: gainsboro;
    }
  }


}


