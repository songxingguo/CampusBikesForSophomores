@import (reference) "/css/base";

#footer{
  background-color: rgb(38, 38, 38);
  color: rgb(155, 155, 155);
  margin-top: 30px;
  padding-top: 20px;
  padding-bottom: 50px;
  .footer-wrap{
    margin: 0 auto;
  }
  ul{
    list-style: none;
    padding-left: 0;
  }
  li{
    display: block;
    float: left;
    padding-right: 45px;
    min-width: 80px;
    h3{
      margin-bottom: 25px;
    }
    i{
      font-size: 20px;
    }
    p{
      line-height: 16px;
    }
    a{
      color: rgb(155, 155, 155);
      &:hover{
        color: whitesmoke;
        text-decoration: none;
      }
    }
  }

  .logo-text{
    color:white;
    font-size: 50px;
    float: left;
    margin:12px 0 0 10px;
    &.long{
      font-size: 43px;
      margin:22px 0 0 10px;
    }
  }

  .copyright{
    margin:15px 0 0 0;
    p{
      margin-bottom: 5px;
    }
  }


  .weixin{
    margin-right:20px;
    float: left;
    img{
      width: 155px;
    }
    i{
      .transition(all, 1s, ease);
      cursor: pointer;
      font-size: 140px;
      line-height: 130px;
    }
  }
}
