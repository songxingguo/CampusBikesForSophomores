<div ng-form style="position: relative">
    <span style="position: absolute;left: 10px;top:7px;color: #AB1010">¥</span>
    <span style="position: absolute;right: 10px;top:7px;color: #AB1010">元</span>
    <input class="form-control"
           placeholder="请输金额"
           ng-model="currency"
           ng-pattern="/^(([1-9]{1}\d*)|([0]{1}))(\.(\d){1,2})?$/"
           style="padding-left: 25px;padding-right: 25px"
           />
    <span class="error-messages">
        <span ng-message="pattern">请输入合理的金额(小数点2位)</span>
    </span>
</div>
