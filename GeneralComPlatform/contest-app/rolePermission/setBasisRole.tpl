<!--设置基础角色-->

<!--用户选择-->
<div id="openBlockUI" class="scM-AddOrEdit blockUI" style="width:650px;max-height:560px;height:auto;">
    <form name="basisRole" style="padding: 0">
        <!--标题栏-->
        <div class="titleArea">
            <table width="100%">
                <tr>
                    <td width="5%" style="vertical-align: middle;">
                        <img src="../../img/blue_dot.png">
                    </td>

                    <td width="87%" style="text-align: left; line-height: 29px;">
                        <span>基础角色权限设置</span>
                    </td>
                    <td width="8%" style="vertical-align: middle; cursor: pointer;">
                        <div onclick="closeBlockUI()"><img src="../../img/close1.png"></div>
                    </td>
                </tr>
            </table>
        </div>

        <div class="treeArea">
            <table class="treeStyle" style="margin-left: 20px;margin-top: 20px;">
                <tr>
                    <td class="roleName">角色名称</td>
                </tr>
                <tr>
                    <td>
                        <ul id="tree" class="ztree"></ul>
                    </td>
                </tr>
            </table>

            <table class="treeStyle" style="margin-left: 20px;margin-top: 20px;">
                <tr>
                    <td class="roleName">权限明细</td>
                </tr>
                <tr>
                    <td>
                        <ul id="module" class="ztree"></ul>
                    </td>
                </tr>
            </table>

        </div>

        <!--按钮区域-->
        <div class="page-operator" style="margin-top: 20px;">
            <a class="btn green" class="a-button" ng-click="savePermission()">保存</a>
            <a ui-sref="center.contractAdd" class="button white" onclick="closeBlockUI()">返回</a>
        </div>
    </form>
</div>

