<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.cp.dao.LoginMapper" >
	<select id="loginForAdmin" resultType="String">
		SELECT id FROM user WHERE code = #{code,jdbcType=VARCHAR} AND password = #{password,jdbcType=VARCHAR} 
		AND role_id != #{roleId,jdbcType=VARCHAR}
	</select>
	
	<select id="loginForOrdinaryUser" resultType="String">
		SELECT id FROM user WHERE code = #{code,jdbcType=VARCHAR} AND password = #{password,jdbcType=VARCHAR} 
		AND role_id = #{roleId,jdbcType=VARCHAR}
	</select>
</mapper>